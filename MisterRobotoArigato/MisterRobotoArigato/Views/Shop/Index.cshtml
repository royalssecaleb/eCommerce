@model ProductListingVM;
@{
    Layout = "_Layout";
}

<div class="container">
    <h4>Shop from our many selections!</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products[0].ImgUrl)
                </th>
                <th>
                    Options
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => product.Name)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => product.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => product.Description)
                    </td>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => product.ImgUrl)" class="smaller-img" />
                    </td>
                    <td>
                        <a asp-controller="Shop" asp-action="Details" asp-route-id="@product.ID" class="btn btn-warning">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (SignInManager.IsSignedIn(User))
    {
        <button class="btn btn-primary" title="View Basket Contents">
            @await Component.InvokeAsync("ShoppingCart")
        </button>
    }
</div>